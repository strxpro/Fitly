{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["app/*"],
      "@store/*": ["store/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@lib/*": ["lib/*"]
    },
    "module": "node16",
    "moduleResolution": "node16",
    "jsx": "react-native",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "target": "es2017",
    "lib": ["es2017"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".env.d.ts"
  ],
  "exclude": [
    "node_modules/*",
    "!node_modules/expo-modules-core",
    "babel.config.js",
    "metro.config.js"
  ]
}
